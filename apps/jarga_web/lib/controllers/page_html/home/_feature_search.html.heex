<!-- Right: RAG Chat Mockup -->
      <div class="flex items-center h-[500px]">
        <div class="bg-base-100 rounded-xl shadow-2xl overflow-hidden border border-base-content/10 w-full h-full flex flex-col scale-[0.85] origin-center">
